<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsCardTakerActivity"
    android:orientation="vertical"
    android:theme="@style/Theme.ProductNotes.NoActionBar"
    android:background="@color/oliva">
  <RelativeLayout
      android:id="@+id/toolbar_CreateProductNotes"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/dark_oliva">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/ic_save_create_product_card"
          android:layout_width="?attr/actionBarSize"
          android:layout_height="?attr/actionBarSize"
          android:src="@drawable/ic_save_notes"
          android:padding="7dp"
          android:layout_alignParentEnd="true"/>

    </RelativeLayout>

  </RelativeLayout>

  <EditText
      android:id="@+id/ProductCardTaker_etCardTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/ProductName"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:layout_margin="8dp"
      android:singleLine="true"/>

  <EditText
      android:id="@+id/ProductCardTaker_etCardQuantity"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Количество"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:layout_margin="8dp"
      android:singleLine="true"/>

  </LinearLayout>